[rdp/domainname]
Description[de]=RDP-Domänenname
Description[en]=RDP domainname
Type=str
Categories=system-desktop

[rdp/redirectdisk]
Description[de]=Aktiviert die Weiterleitung des Verzeichnis /var/drives unter dem Namen local-drives
Description[en]=Enable the redirection of the directories below /var/drives under the name local-drives
Type=str
Categories=system-desktop

[rdp/user]
Description[de]=RDP-Benutzername
Description[en]=RDP Username
Type=str
Categories=system-desktop

[rdp/server]
Description[de]=Adresse des RDP-Server
Description[en]=Address of the RDP server
Type=str
Categories=system-desktop

[rdp/keyboard]
Description[de]=Keyboard-Layout für freerdp (die Liste der verfügbaren Layouts kann mit dem Befehl "xfreerdp --list-kdb" abgerufen werden)
Description[en]=Keyboard layout for freerdp (a list of available layouts can be queried with "xfreerdp --list-kdb")
Type=str
Categories=system-desktop

[rdp/checktls]
Description[de]=Ist diese Variable auf yes gesetzt, wird die TLS-Verschlüsselung der RDP-Sitzung aktiviert
Description[en]=If this variable is set to yes, TLS encryption of the RDP session is enabled
Type=str
Categories=system-desktop

[rdp/checknla]
Description[de]=Ist diese Variable auf yes gesetzt, wird Network Level Authentication aktiviert
Description[en]=If this variable is set to yes, network level authentication is enabled
Type=str
Categories=system-desktop

[rdp/disable-sound]
Description[de]=Wird diese Variable aktiviert, wird keine Soundausgabe in der RDP-Sitzung weitergeleitet
Description[en]=If this variable is activated, no sound is redirected in the RDP session
Type=bool
Categories=system-desktop

[rdp/additionaloptions]
Description[de]=Diese Variable kann genutzt werden, um zusätzliche Optionen an freerdp zu übergeben
Description[en]=This variable can be used to pass additional options to freerdp
Type=str
Categories=system-desktop

[rdp/geometry]
Description[de]=Die zu verwendende Auflösung. Kann im Format [Breite]x[Höhe] in Pixeln oder als Prozent des gesamten Bildschirms [80%] angegeben werden
Description[en]=Desktop geometry to be used. Useable formats are [width]x[height] in pixels or percentage of the whole screen [80%]
Type=str
Categories=system-desktop

[rdp/clienthostname]
Description[de]=Der hostname des Clients. Wird normalerweise automatisch ermittelt
Description[en]=Client hostname. Normally this is obtained automatically
Type=str
Categories=system-desktop

[rdp/ignorecertificate]
Description[de]=Bei aktivierter Variable wird das Zertifikat des Terminalservers nicht beachtet und muss nicht bestätigt werden
Description[en]=If this variable is activated the server certificate is ignored and does not have to be approved
Type=bool
Categories=system-desktop
